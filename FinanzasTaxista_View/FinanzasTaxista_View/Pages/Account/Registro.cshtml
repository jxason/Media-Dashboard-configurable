@page
@model FinanzasTaxista_View.Pages.Account.RegistroModel
@{
    ViewData["Title"] = "Registrar usuario";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/cuenta-vista.css" />
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h2>Registrar usuario</h2>
            <p class="login-subtitle">Completa los campos para crear tu cuenta</p>
        </div>

        <form method="post">
            <div class="form-group">
                <label asp-for="Input.nombre_usuario" class="form-label">Nombre de usuario</label>
                <input asp-for="Input.nombre_usuario" class="form-input" />
                <span asp-validation-for="Input.nombre_usuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.apellido1" class="form-label">Primer apellido</label>
                <input asp-for="Input.apellido1" class="form-input" />
                <span asp-validation-for="Input.apellido1" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.apellido2" class="form-label">Segundo apellido</label>
                <input asp-for="Input.apellido2" class="form-input" />
                <span asp-validation-for="Input.apellido2" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.correo_electronico" class="form-label">Correo electrónico</label>
                <input asp-for="Input.correo_electronico" type="email" class="form-input" />
                <span asp-validation-for="Input.correo_electronico" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.contrasena" class="form-label">Contraseña</label>
                <input asp-for="Input.contrasena" type="password" class="form-input" />
                <span asp-validation-for="Input.contrasena" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-login">Registrar</button>

            <div class="forgot-password">
                <a asp-page="/Account/IniciarSesion">Cancelar</a>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(Model.message))
        {
            <div class="message">
                <strong>@Model.message</strong>
            </div>
        }
    </div>
</body>
</html>



