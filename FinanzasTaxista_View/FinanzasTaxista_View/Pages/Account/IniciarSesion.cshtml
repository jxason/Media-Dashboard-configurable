@page
@model FinanzasTaxista_View.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/cuenta-vista.css" />
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h2>
                Iniciar Sesión
            </h2>
            <p class="login-subtitle">Accede a tu cuenta</p>
        </div>

        <form method="post">
            <div class="form-group">
                <label asp-for="usuarioLogin.identificador" class="form-label">Correo Electrónico</label>
                <input asp-for="usuarioLogin.identificador"
                       type="email"
                       class="form-input"
                       placeholder="Ingrese su correo"
                       required />
                <span asp-validation-for="usuarioLogin.identificador" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="usuarioLogin.contrasena" class="form-label">Contraseña</label>
                <input asp-for="usuarioLogin.contrasena"
                       type="password"
                       class="form-input"
                       placeholder="Ingrese su contraseña"
                       required />
                <span asp-validation-for="usuarioLogin.contrasena" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.Mensaje))
            {
                <div class="form-error">
                    <span class="text-danger">@Model.Mensaje</span>
                </div>
            }

            <button type="submit" class="btn-login">Iniciar Sesión</button>
        </form>

        <div class="forgot-password">
            <a asp-page="/Account/Registro">¿No tienes cuenta? Regístrate aquí</a>
        </div>
    </div>
</body>
</html>

