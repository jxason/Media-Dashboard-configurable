@page
@model FinanzasTaxista_View.Pages.Views.GastoCRUD.EditarModel
@{
    ViewData["Title"] = "Editar gasto";
}

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/formulario-vista.css" asp-append-version="true" />
</head>
<body>
    <div class="page-container">
        <div class="form-container">
            <h2>Editar gasto</h2>

            <form method="post">
                <input asp-for="_gastoModel.id" type="hidden" />

                <div class="form-group">
                    <label asp-for="_gastoModel.id_usuario">Id usuario</label>
                    <input asp-for="_gastoModel.id_usuario" type="number" class="form-control" />
                    <span asp-validation-for="_gastoModel.id_usuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="_gastoModel.id_dia">Id día de trabajo</label>
                    <input asp-for="_gastoModel.id_dia" type="number" class="form-control" />
                    <span asp-validation-for="_gastoModel.id_dia" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="_gastoModel.id_categoria">Categoría</label>
                    <select asp-for="_gastoModel.id_categoria"
                            class="form-control"
                            asp-items="Model.CategoriasLista">
                        <option value="">-- Seleccione una categoría --</option>
                    </select>
                    <span asp-validation-for="_gastoModel.id_categoria" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="_gastoModel.monto">Monto</label>
                    <input asp-for="_gastoModel.monto" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="_gastoModel.monto" class="text-danger"></span>
                </div>
                
                <div class="button-group">
                    <button type="submit" class="btn btn-primary">Actualizar gasto</button>
                    <a asp-page="/Views/GastosView" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(Model.message))
            {
                <div class="message">
                    <strong>@Model.message</strong>
                </div>
            }
        </div>
    </div>
</body>
</html>

