@page
@model FinanzasTaxista_View.Pages.Views.UsuarioCRUD.EditarModel
@{
    ViewData["Title"] = "Editar usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/formulario-vista.css" asp-append-version="true" />
</head>
<body>
    <div class="page-container">
        <div class="form-container">
            <h2>Editar usuario</h2>

            <form method="post">
                <input asp-for="_usuarioModel.id" type="hidden" />

                <div class="form-group">
                    <label asp-for="_usuarioModel.id_rol">ID de rol</label>
                    <input asp-for="_usuarioModel.id_rol" type="number" class="form-control" />
                    <span asp-validation-for="_usuarioModel.id_rol" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="_usuarioModel.nombre_usuario">Nombre de usuario</label>
                    <input asp-for="_usuarioModel.nombre_usuario" class="form-control" />
                    <span asp-validation-for="_usuarioModel.nombre_usuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="_usuarioModel.apellido1">Primer apellido</label>
                    <input asp-for="_usuarioModel.apellido1" class="form-control" />
                    <span asp-validation-for="_usuarioModel.apellido1" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="_usuarioModel.apellido2">Segundo apellido</label>
                    <input asp-for="_usuarioModel.apellido2" class="form-control" />
                    <span asp-validation-for="_usuarioModel.apellido2" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="_usuarioModel.correo_electronico">Correo electrónico</label>
                    <input asp-for="_usuarioModel.correo_electronico" type="email" class="form-control" />
                    <span asp-validation-for="_usuarioModel.correo_electronico" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="_usuarioModel.contrasena">Contraseña</label>
                    <input asp-for="_usuarioModel.contrasena" type="password" class="form-control" />
                    <span asp-validation-for="_usuarioModel.contrasena" class="text-danger"></span>
                </div>
                
                <div class="button-group">
                    <button type="submit" class="btn btn-primary">Actualizar</button>
                    <a asp-page="/Views/UsuariosView" class="btn btn-secondary">Cancelar</a>
                </div>
            
            </form>

            @if (!string.IsNullOrEmpty(Model.message))
            {
                <div class="message">
                    <strong>@Model.message</strong>
                </div>
            }
        </div>
    </div>
</body>
</html>









