@{
    ViewData["Title"] = "Únete al equipo";
}

<div class="container mt-5">
    <div class="text-center">
        <h2 class="text-danger fw-bold">¿Quieres formar parte del equipo?</h2>
        <p class="lead">Estamos en constante evolución y siempre buscamos talento apasionado en tecnología, medios digitales y análisis de datos.</p>
        <a class="btn btn-danger btn-lg mt-3" href="/Contacto">Postúlate ahora</a>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold text-danger">Frontend Developer</h5>
                    <p class="card-text">Diseña componentes visuales y experiencia UI/UX.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold text-danger">API Integrator</h5>
                    <p class="card-text">Conecta APIs externas como clima, noticias y media feeds.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold text-danger">Administrador de Contenido</h5>
                    <p class="card-text">Gestiona los widgets, categorías y panel de configuración.</p>
                </div>
            </div>
        </div>
    </div>
</div>
