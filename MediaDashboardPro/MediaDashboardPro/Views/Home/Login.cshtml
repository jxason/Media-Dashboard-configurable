@model MediaDashboardPro.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login-view.css">
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h2>
                <span class="login-icon">🔑</span>
                Iniciar Sesión
            </h2>
            <p class="login-subtitle">Accede a tu cuenta</p>
        </div>

        <form asp-controller="Login" asp-action="SigIn" method="post">

            <div class="form-group">
                <label asp-for="nombre_usuario" class="form-label">Usuario</label>
                <input asp-for="nombre_usuario"
                       class="form-input"
                       placeholder="Ingrese su nombre de usuario"
                       required />
                <span asp-validation-for="nombre_usuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="password" class="form-label">Contraseña</label>
                <input asp-for="password"
                       type="password"
                       class="form-input"
                       placeholder="Ingrese su contraseña"
                       required />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn-login">Iniciar Sesión</button>
            </div>

        </form>


        <div class="forgot-password">
            <a href="#">¿Olvidaste tu contraseña?</a>
        </div>
    </div>
</body>
</html>
