@{
    ViewData["Title"] = "Configuration panel";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Configuration panel</title>
    <link rel="stylesheet" href="~/css/configuration-panel-view.css" />
</head>
<body>
    <aside class="sidebar">
        <h2>🛠️ Configuración</h2>
        <nav>
            <ul>
                <li><a href="#">Widgets</a></li>
                <li><a href="#">Favoritos</a></li>
                <li><a href="#">Roles</a></li>
            </ul>
        </nav>
    </aside>

    <main class="main-content">
        <header>
            <h1>Panel de Configuración</h1>
            <button class="btn add">➕ Agregar Widget</button>
        </header>

        <section class="widgets">
            <h2>⭐ Favoritos</h2>
            <div class="widget-grid">
                <div class="widget favorito">
                    <h3>Mi Widget Favorito</h3>
                    <p>Contenido personalizable visible para todos</p>
                    <div class="tags">
                        <span>Todos</span>
                        <span>Visible</span>
                    </div>
                    <div class="actions">
                        <button>✏️</button>
                        <button>🗑️</button>
                        <button>🙈</button>
                    </div>
                </div>
                <!-- Más widgets -->
            </div>

            <h2>🧩 Otros Widgets</h2>
            <div class="widget-grid">
                <div class="widget otro">
                    <h3>Widget Adicional</h3>
                    <p>Ejemplo no favorito, editable</p>
                    <div class="tags">
                        <span>Solo yo</span>
                        <span>Visible</span>
                    </div>
                    <div class="actions">
                        <button>✏️</button>
                        <button>🗑️</button>
                        <button>🙈</button>
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>
</html>


