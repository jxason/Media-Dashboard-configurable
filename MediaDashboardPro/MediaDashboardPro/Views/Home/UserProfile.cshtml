
@{  
   ViewData["Title"] = "User Profile";  
   Layout = null;  
}  

<!DOCTYPE html>  
<html lang="es">  
<head>  
   <meta charset="utf-8" />  
   <meta name="viewport" content="width=device-width, initial-scale=1" />  
   <title>User Profile</title>  
   <link rel="stylesheet" href="~/css/user-profile-view.css" />  
</head>  
<body>  
   <aside class="sidebar">  
       <h2>🛠️ Configuración</h2>  
       <nav>  
           <ul>
                <li><a href="~/Home/ConfigurationPanel">Widgets</a></li>
                <li><a href="Home/ConfigurationPanel">Favoritos</a></li>
                <li><a href="#">Roles</a></li>  
           </ul>  
       </nav>  
   </aside>  

   <main class="main-content">  
       <header>  
           <h1>Perfil de Usuario</h1>  
       </header>  

       <section class="user-profile">  
           <div class="profile-card">  
               <img src="~/images/user-avatar.png" alt="Avatar del usuario" class="avatar" />  
               <h2>Nombre del Usuario</h2>  
               <p>Correo electrónico: usuario@ejemplo.com</p>  
               <p>Rol: Administrador</p>  
               <button class="btn edit-profile">✏️ Editar Perfil</button>  
           </div>  
       </section>  
   </main>  
</body>  
</html>
